@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to your Sport App</h1>
    <img src="https://images.pexels.com/photos/1208777/pexels-photo-1208777.jpeg" class="homepage-image" alt="Sports Image">
    @if (!SignInManager.IsSignedIn(User))
    {
        <h4 class="display-6">Login or register to continue.</h4>
    }
</div>
